<Window x:Class="WpfApp1.AddText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AddText" Height="287" Width="186">
    <Grid Margin="0,0,2,0">
        <xctk:ColorPicker Name="cp"  DisplayColorAndName="True"
                          AvailableColorsSortingMode="HueSaturationBrightness" Margin="21,70,16,139"
                          />
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="37" 
                 Margin="21,28,0,0" TextWrapping="Wrap" Text="font size" 
                 VerticalAlignment="Top" Width="63"
                 PreviewTextInput="NumberValidationTextBox"/>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Height="67" 
                 Margin="21,137,0,0" TextWrapping="Wrap" Text="insert txt" 
                 VerticalAlignment="Top" Width="147"
                 />
        <Button x:Name="button" Content="Add text"
                HorizontalAlignment="Left" 
                Margin="21,219,0,10" 
                Width="147" Click="button_Click"/>
    </Grid>
</Window>
